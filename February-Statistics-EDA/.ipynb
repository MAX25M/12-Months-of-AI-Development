
import pandas as pd
import numpy as np
import seaborn as sns
import matplotlib.pyplot as plt

# Load your chosen Kaggle dataset
df = pd.read_csv("your_dataset.csv")

# 1. THE MATH: Descriptive Statistics
# This shows the Mean, Median, Std Dev, etc.
stats_summary = df.describe()
print(stats_summary)

# 2. THE VISUAL: The Bell Curve
# Let's see if a column (like 'Energy_Usage' or 'Stock_Price') is "Normally Distributed"
plt.figure(figsize=(10, 6))
sns.histplot(df['column_name'], kde=True)
plt.title("Is my data Normal? (Probability Distribution)")
plt.show()
